@model CLB_TinHoc_64131060.Models.ThanhVienSuKien

@{
    ViewBag.Title = "Thêm thành viên tham gia sự kiện (Chủ nhiệm)";
    Layout = "~/Views/Shared/_LayoutAssitant_64131060.cshtml";
}

<style>
    .form-container {
        margin-top: 150px !important;
        margin: 100px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #296cb2;
            font-weight: bold;
        }

        .form-container label {
            font-size: 16px;
            font-weight: 600;
            color: #333;
        }

        .form-container .form-control {
            font-size: 15px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
        }

        .form-container .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .form-container .btn {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: white;
            background-color: #296cb2;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .form-container .btn:hover {
                background-color: #1a4d87;
            }

        .form-container .btn-back {
            background-color: #888;
        }

            .form-container .btn-back:hover {
                background-color: #555;
            }

    .text-danger {
        color: red;
        font-size: 13px;
    }
</style>

<div class="form-container">
    <h2>Thêm Thành Viên</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="MaSuKien">Sự kiện</label>
                @Html.DropDownList("MaSuKien", null, "-- Chọn sự kiện --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaSuKien, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="MaThanhVien">Thành viên</label>
                @Html.DropDownList("MaThanhVien", null, "-- Chọn thành viên --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaThanhVien, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="NgayDangKy">Thời gian đăng ký</label>
                @Html.EditorFor(model => model.NgayDangKy, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") } })
                @Html.ValidationMessageFor(model => model.NgayDangKy, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">THÊM</button>
                @Html.ActionLink("QUAY VỀ", "ThanhVienSuKien_Admin_64131060", null, new { @class = "btn btn-back" })
            </div>
        </div>
    }
</div>