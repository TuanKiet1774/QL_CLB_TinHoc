@model IEnumerable<CLB_TinHoc_64131060.Models.BaiDang>

@{
    ViewBag.Title = "Trang tin tức (Chủ nhiệm)";
    Layout = "~/Views/Shared/_LayoutAdmin_64131060.cshtml";
}

<style>
    .post {
        margin-top: 150px;
        margin-bottom: 100px;
        margin-inline: 450px;
        font-size: 20px;
    }

    .post-item {
        border: 1px solid black;
        margin-top: 20px;
        background-color: whitesmoke;
    }

    .author {
        width: 100%;
        font-size: 10px;
        display: flex;
        justify-content: space-between;
        text-align: center;
        padding: 10px;
        border-top: 1px solid black;
    }

    .post-header {
        background-color: rgba(41,108,178,255);
        font-family: "Oswald", sans-serif;
        font-optical-sizing: auto;
        font-weight: bold;
        font-style: normal;
        padding: 10px;
    }

    .post-content {
        margin-inline: 20px;
        margin-block: 10px;
    }

    .img, img {
        text-align: center;
        border-radius: 15px;
        margin-bottom: 10px;
    }

    .option {
        background-color: rgba(41,108,178,255);
        padding-block: 10px;
    }

    .btn-create {
        text-align: center;
        background-color: rgba(41,108,178,255);
        padding-block: 5px;
        border: 1px solid black;
        border-radius: 15px;
    }

        .btn-create:hover {
            background: rgba(41,108,178,200);
            cursor: pointer;
            border: 2px solid whitesmoke;
        }
</style>


<div class="post">
    <div class="btn-create">
        <b style="font-size: 30px;">@Html.ActionLink("+", "Create")</b>
    </div>
    @foreach (var item in Model)
    {
        <div class="post-item">
            <div class="post-header">
                <h3>@Html.DisplayFor(modelItem => item.TieuDe)</h3>
            </div>
            <div class="post-content">
                @Html.DisplayFor(modelItem => item.NoiDung)
            </div>
            <div class="img">
                <img src="~/Image/@Html.DisplayFor(modelItem => item.Anh)" alt="" width="500" height="500" />
            </div>
            <div class="author">
                <div>@Html.DisplayFor(modelItem => item.ThanhVien.HoTen)</div>
                <div>@Html.DisplayFor(modelItem => item.NgayTao)</div>
            </div>
            <div class="option d-flex justify-content-between">
                <div class="option-item ms-2">
                    <b>@Html.ActionLink("SỬA", "Edit", new { id = item.MaBaiDang })</b>
                </div>
                <div class="option-item">
                    <b>@Html.ActionLink("CHI TIẾT", "Details", new { id = item.MaBaiDang })</b>
                </div>
                <div class="option-item me-2">
                    <b>@Html.ActionLink("XÓA", "Delete", new { id = item.MaBaiDang })</b>
                </div>
            </div>
        </div>
    }
</div>

