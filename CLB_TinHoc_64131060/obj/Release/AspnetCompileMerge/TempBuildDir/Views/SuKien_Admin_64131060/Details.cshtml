@model CLB_TinHoc_64131060.Models.SuKien

@{
    ViewBag.Title = "Thông tin chi tiết sự kiện (Chủ nhiệm)";
    Layout = "~/Views/Shared/_LayoutAdmin_64131060.cshtml";
}

<style>
    .body-detail {
        margin-top: 150px;
        margin-bottom: 50px;
        margin-inline: 400px;
        font-size: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #296CB2;
        color: white;
    }

    .btn-container {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn-back, .btn-edit {
        border: 1px solid black;
        background-color: rgba(41,108,178,255);
        padding: 5px;
        text-decoration: none;
        color: white;
        font-weight: bold;
    }

        .btn-back:hover, .btn-edit:hover {
            color: lawngreen !important;
        }
</style>

<div class="body-detail">
    <table>
        <tr>
            <th colspan="2" style="text-align: center;">
                THÔNG TIN CHI TIẾT SỰ KIỆN
            </th>
        </tr>
        <tr>
            <th>Mã sự kiện</th>
            <td>@Html.DisplayFor(model => model.MaSuKien)</td>
        </tr>
        <tr>
            <th>Tên sự kiện</th>
            <td>@Html.DisplayFor(model => model.TenSuKien)</td>
        </tr>
        <tr>
            <th>Mô tả</th>
            <td>@Html.DisplayFor(model => model.MoTa)</td>
        </tr>
        <tr>
            <th>Người tổ chức</th>
            <td>@Html.DisplayFor(model => model.ThanhVien.HoTen)</td>
        </tr>
        <tr>
            <th>Ngày bắt đầu</th>
            <td>@Html.DisplayFor(model => model.NgayBatDau)</td>
        </tr>
        <tr>
            <th>Ngày kết thúc</th>
            <td>@Html.DisplayFor(model => model.NgayKetThuc)</td>
        </tr>
        <tr>
            <th>Danh sách thành viên</th>
            <td>
                @foreach (var thanhVien in Model.ThanhVienSuKiens.Select(tvs => tvs.ThanhVien))
                {
                    @thanhVien.HoTen <br />
                }
            </td>
        </tr>

    </table>

    <div class="btn-container">
        <a class="btn-edit" href="@Url.Action("Edit", new { id = Model.MaSuKien })">CẬP NHẬT</a>
        <a class="btn-back" href="@Url.Action("TimKiemSuKien_Admin_64131060")">QUAY VỀ</a>
    </div>
</div>
