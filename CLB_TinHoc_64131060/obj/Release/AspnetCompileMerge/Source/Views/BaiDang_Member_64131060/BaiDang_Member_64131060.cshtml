@model IEnumerable<CLB_TinHoc_64131060.Models.BaiDang>

@{
    ViewBag.Title = "Bài đăng tin tức (Member)";
    Layout = "~/Views/Shared/_LayoutMember_64131060.cshtml";
}

<style>
    .post {
        margin-top: 150px;
        margin-bottom: 100px;
        margin-inline: 450px;
        font-size: 20px;
    }

    .post-item {
        border: 1px solid black;
        margin-top: 20px;
        background-color: whitesmoke;
    }

    .author {
        width: 100%;
        font-size: 10px;
        display: flex;
        justify-content: space-between;
        text-align: center;
        padding: 10px;
        border-top: 1px solid black;
    }

    .post-header {
        background-color: rgba(41,108,178,255);
        font-family: "Oswald", sans-serif;
        font-optical-sizing: auto;
        font-weight: bold;
        font-style: normal;
        padding: 10px;
    }

    .post-content {
        margin-inline: 20px;
        margin-block: 10px;
    }

    .img, img {
        text-align: center;
        border-radius: 15px;
        margin-bottom: 10px;
    }
</style>


<div class="post">
    @foreach (var item in Model)
    {
        <div class="post-item">
            <div class="post-header">
                <h3>@Html.DisplayFor(modelItem => item.TieuDe)</h3>
            </div>
            <div class="post-content">
                @Html.DisplayFor(modelItem => item.NoiDung)
            </div>
            <div class="img">
                <img src="~/Image/@Html.DisplayFor(modelItem => item.Anh)" alt="" width="500" height="500" />
            </div>
            <div class="author">
                <div>@Html.DisplayFor(modelItem => item.ThanhVien.HoTen)</div>
                <div>@Html.DisplayFor(modelItem => item.NgayTao)</div>
            </div>
        </div>
    }
</div>

