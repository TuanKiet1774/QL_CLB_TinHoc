@model CLB_TinHoc_64131060.Models.BaiDang

@{
    ViewBag.Title = "Chỉnh sửa bài đăng (Trợ giảng)";
    Layout = "~/Views/Shared/_LayoutAssitant_64131060.cshtml";
}

<style>
    .form-horizontal {
        margin-top: 150px;
        margin-bottom: 50px;
        margin-inline: 50px;
        font-size: 20px;
    }

    .form-group {
        margin-top: 10px;
    }

    .btn-back,
    .btn-save {
        border: 1px solid black;
        background-color: rgba(41,108,178,255);
        width: fit-content;
    }

    .btn-back {
        padding: 5px;
        font-size: 17px;
    }

    .btn-save .btn:hover {
        color: lawngreen !important;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaBaiDang)

    <div class="form-group">
        <b>Tiêu đề</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b>Ảnh</b>
        <div class="col-md-10">
            <input type="file" name="Anh" id="Anh" required/>
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <b>Nội dung</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b>Tác giả</b>
        <div class="col-md-10">
            @Html.DropDownList("TacGia", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TacGia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b>Ngày tạo</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex">
        <div class="btn-back">
            @Html.ActionLink("QUAY VỀ", "BaiDang_Assitant_64131060")
        </div>
        <div class="btn-save col-md-offset-2 col-md-10 ms-5">
            <input type="submit" value="CẬP NHẬT" class="btn btn-default text-white" />
        </div>
    </div>
</div>
}
