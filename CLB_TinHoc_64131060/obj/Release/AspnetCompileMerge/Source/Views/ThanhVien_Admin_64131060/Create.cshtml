@model CLB_TinHoc_64131060.Models.ThanhVien

@{
    ViewBag.Title = "Thêm thành viên (Chủ nhiệm)";
    Layout = "~/Views/Shared/_LayoutAdmin_64131060.cshtml";
}

<style>
    .body {
        display: flex;
        justify-content: center;
        margin-top: 150px;
        margin-bottom: 50px;
    }

    .form-group {
        display: flex;
        margin-bottom: 5px;
    }

    .form-control {
        padding: 10px;
    }

    .control-label {
        font-weight: bold;
        width: 150px;
    }

    .btn-back,
    .btn-save {
        border: 1px solid black;
        background-color: rgba(41,108,178,255);
        width: fit-content;
    }

    .btn-back {
        padding: 5px;
        font-size: 17px;
    }

        .btn-back:hover, .btn-save:hover, .btn:hover {
            color: lawngreen !important;
            background-color: rgba(41,108,178,255);
            font-weight: bold;
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.MaThanhVien, "Mã số", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaThanhVien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaThanhVien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HoTen, "Thành viên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaVaiTro, "Vai trò", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaVaiTro", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaVaiTro, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayTao, "Thời gian lập", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss") } })
                    @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ms-5">
                <div class="btn-save col-md-offset-2 col-md-10 me-5">
                    <input type="submit" value="THÊM" class="btn btn-default text-white" />
                </div>
                <div class="btn-back ms-5">
                    @Html.ActionLink("QUAY VỀ", "TimKiemTV_Admin_64131060")
                </div>
            </div>
        </div>
    </div>
}


